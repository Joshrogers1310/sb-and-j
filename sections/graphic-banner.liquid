<style>
  @media (max-width: 768px) {
    #{{ section.id }} .mobile-banner {
      background-color: #fafafa;
      height: {{ section.settings.mobile_height }}px;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .mobile-banner p {
      text-align: center;
    }

    #{{ section.id }} .graphic-banner-section {
      background-image: url({{ section.settings.mobile_image | image_url: width: 768 }});
      background-size: cover;
      background-position: center;
    }

    .desktop-banner {
      display: none;
    }
  }

  @media (min-width: 768px) {
    #{{ section.id }} .desktop-banner {
      background-color: #fafafa;
      height: {{ section.settings.desktop_height }}px;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .desktop-banner p {
      text-align: center;
    }

    #{{ section.id }} .graphic-banner-section {
      background-image: url({{ section.settings.desktop_image | image_url: width: 1920 }});
      background-size: cover;
      background-position: center;
    }
    
    .mobile-banner {
      display: none;
    }
  }
</style>

<section id="{{ section.id }}">
  {% if section.settings.desktop_image != blank %}  
    <div class="graphic-banner-section desktop-banner">
      
    </div>
  {% else %}
    <div class="desktop-banner">
      <p>Please select a desktop image (these can be added in the product metafields)</p>
    </div>
  {% endif %}

  {% if section.settings.mobile_image != blank %}
    <div class="graphic-banner-section mobile-banner">
      
    </div>
  {% else %}
    <div class="mobile-banner">
      <p>Please select a mobile image (these can be added in the product metafields)</p>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Graphic Banner",
  "settings": [
    {
      "type": "range",
      "id": "desktop_height",
      "min": 100,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "label": "Desktop Banner Height",
      "default": 800
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 100,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Mobile Banner Height",
      "default": 450
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    }
  ],
  "limit": 2,
  "presets": [
    {
      "name": "Graphic Banner"
    }
  ]
}
{% endschema %}